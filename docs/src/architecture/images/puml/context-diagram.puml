@startuml aquarius-context
!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!include ICONURL/common.puml
!include ICONURL/devicons/react.puml
!include ICONURL/devicons/python.puml
!include ICONURL/devicons/database.puml
!include ICONURL/font-awesome-5/users.puml
!include ICONURL/font-awesome-5/swimming_pool.puml

title Aquarius - Systemkontext

actor "Liga-Präsident\n(Admin)" as admin
actor "Verein" as verein
actor "Kampfrichter" as kampfrichter
actor "Punktrichter" as punktrichter
actor "Kind" as kind

package "Aquarius System" {
  component "Planungs-App\n(Desktop)" as planning <<React>> #lightblue
  component "Durchführungs-App\n(Mobile/Tablet)" as execution <<React>> #lightgreen
  component "Backend API" as backend <<Python>> #yellow
  database "Turso DB\n(libSQL)" as db <<Database>>
  
  planning --> backend : REST API
  execution --> backend : REST API
  backend --> db : SQL
}

admin --> planning : Saison planen\nFiguren verwalten
verein --> planning : Kinder anmelden\nTeams verwalten
kampfrichter --> execution : Bewertungen eingeben
punktrichter --> execution : Station verwalten\nEndpunkte berechnen
kind --> planning : Zu Wettkämpfen\nanmelden

note right of execution
  Offline-fähig für
  Schwimmbad-Umgebung
end note

note bottom of db
  Cloud-Datenbank mit
  lokaler Sync-Funktion
end note

@enduml